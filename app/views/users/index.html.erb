<h2> Users </h2>

<table>
  <tr>
    <th>Login</th>
    <th>Password</th>
    <th>Name</th>
    <th>Email</th>
    <th>Location</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%=h user.login %></td>
      <td><%=h user.password %></td>
      <td><%=h user.name %></td>
      <td><%=h user.email %></td>
      <td><%=h user.location %></td>
      <td><%= link_to "Show", user %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New User", new_user_path %></p>

